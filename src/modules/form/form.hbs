<form class="form card">
  {{#if title}}
    <p class="form__title"> {{title}}</p>
  {{/if}}

  {{#if fields}}
    <div class="form__fields">
      {{#each fields}}
        {{{this}}}
      {{/each}}
    </div>
  {{/if}}

  {{#if confirmMessage}}
    <div class="form__confirm">
      {{confirmMessage}}
    </div>
  {{/if}}


  <div class="form__actions">
    <div class="row">

      {{#if secondaryButton}}
        {{{secondaryButton}}}
      {{/if}}
      {{{submitButton}}}
    </div>
    {{#if borderlessButton}}
      {{{borderlessButton}}}
    {{/if}}

  </div>
</form>
